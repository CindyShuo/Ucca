/* index/details.wxss */
@import "aa1.wxss";

.details-top {
  position: absolute;
  width: 750rpx;
  height: 400rpx;
  z-index: 1;
  top: 0;
  z-index: 0;
}

.brief {
  position: relative;
  margin: auto;
  width: 590rpx;
  height: 300rpx;
  padding: 40rpx;
  background: #fff;
  z-index: 1000;
  margin-top: 300rpx;
  border-radius: 0 20rpx 0 0;
    box-shadow: 1rpx 1rpx 26rpx rgba(0, 0, 0, 0.05);

}

.brief-topic {
  font-size: 34rpx;
  line-height: 48rpx;
  font-weight: bold;
}

.brief-span {
  font-size: 24rpx;
  opacity: 0.6;
  margin-top: 10rpx;
}

.brief-line {
  margin: 30rpx 0;
  height: 1rpx;
  background: #000;
  opacity: 0.1;
}

.ucca-p3-1 {
  position: relative;
  margin: 25rpx 25rpx 0 0;
  font-size: 42rpx;
  font-weight: bold;
}

.ucca-p4 {
  position: relative;
  margin-top: 25rpx;
}

.ucca-p5 {
  position: relative;
  margin-top: 28rpx;
}

.brife-p6 {
  clear: both;
  font-size: 24rpx;
  line-height: 80rpx;
}

.tips {
  width: 590rpx;
  height: 80rpx;
  border-radius: 0 20rpx 0 0;
  background: rgba(237, 48, 36, 0.08);
  margin: 30rpx 40rpx 0;
  font-size: 24rpx;
  line-height: 80rpx;
  padding: 0 40rpx;
  font-weight: bold;
}

.tips span {
  color: red;
}

.tips-arrow {
  float: right;
  width: 14rpx;
  height: 27rpx;
  margin-top: 28rpx;
}

.details-scroll {
  margin: 20rpx 0 0 40rpx;
  width: 1000rpx;
  height: 180rp;
  overflow: hidden;
}

.details-scroll-div {
  float: left;
  width: 240rpx;
  height: 180rpx;
  border-radius: 0 20rpx 0 0;
  margin-right: 20rpx;
}

.details-most {
  width: 100%;
  margin-top: 40rpx;
  background: #fff;
  font-size: 30rpx;
  box-shadow: 1rpx -1rpx 26rpx rgba(0, 0, 0, 0.05);
}

.details-menu {
  width: 100%;
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
  height: 90rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.details-menu-div {
  line-height: 90rpx;
  margin: 0 68rpx;
}

.details-menu-div1 {
  border-bottom: 4rpx solid red;
  font-weight:bold;
}

.details-most-topic {
  font-size: 34rpx;
  margin: 50rpx 40rpx 10rpx;
}

.details-most-p {
  width: 670rpx;
  padding: 10rpx 40rpx;
  line-height: 54rpx;
  font-weight: bold;
}

.details-bottom {
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 100rpx;
  background: #fff;
  z-index: 10009;
  box-shadow: 1rpx -1rpx 1rpx rgba(0, 0, 0, 0.05);
}

.details-bottom-div {
  float: left;
  width: 248rpx;
  height: 100%;
  border-right: 1rpx solid rgba(0, 0, 0, 0.1);
  text-align: center;
  font-weight: bold;
}

.details-bottom-div1 {
  width: 82rpx;
  height: 100%;
}

.details-bottom-div2 {
  font-size: 30rpx;
  line-height: 80rpx;
  position: relative;
}

.details-bottom-div2-span {
  position: absolute;
  font-size: 20rpx;
  opacity: 0.6;
  width: 100%;
  top: 30rpx;
}

.details-bottom-div3 {
  background: #000;
  color: #fff;
  font-size: 30rpx;
  line-height: 100rpx;
}
