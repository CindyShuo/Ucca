/* index/guide1.wxss */
@import "index.wxss";

.body {
  padding-bottom: 100rpx;
}

.guide1-image {
  position: relative;
  width: 750rpx;
  height: 470rpx;
  margin-bottom: 30rpx;
}

.btn-arrow {
  width: 100rpx;
  height: 30rpx;
  bottom: 0;
  position: absolute;
  left: 325rpx;
}

.guide1-list {
  width: 670rpx;
  margin: 0 30rpx 30rpx;
  padding: 0 0 0 20rpx;
  border-radius: 0 20rpx 0 0;
  background: #fff;
  box-shadow: 3rpx 3rpx 25rpx rgba(0, 0, 0, 0.03);
  overflow: hidden;
}

.guide1-list1 {
  width: 670rpx;
  height: 140rpx;
  margin-top: 20rpx;
}

.list-image {
  width: 120rpx;
  height: 120rpx;
  float: left;
  margin-right: 30rpx;
  position: relative;
}

.list-image-play {
  position: absolute;
  bottom: 10rpx;
  text-align: center;
  width: 120rpx;
  font-size: 24rpx;
  line-height: 33rpx;
  color: #fff;
  height:33rpx;
}

.list-image-play-font {
  position:absolute;
  left:10rpx;
  right:30rpx;
}

.list-image-play-icon {
  width: 16rpx;
  height: 16rpx;
  position:absolute;
  top:8rpx;
  right:15rpx;
}

.list-topic {
  font-size: 30rpx;
  margin: 30rpx;
}

.list-right {
  float: right;
  width: 520rpx;
  height: 140rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.list-right1 {
  border: none;
}

.list-icon {
  width: 36rpx;
  height: 36rpx;
  background: #000;
  border-radius: 100rpx;
  color: #fff;
  line-height: 36rpx;
  text-align: center;
  float: left;
  font-size: 16rpx;
  margin-right: 12rpx;
}

.list-icon1 {
  margin-top: 42rpx;
}

.list-icon2 {
  margin-top: 19rpx;
}

.list-font {
  font-size: 28rpx;
  line-height: 36rpx;
  margin-top: 42rpx;
}

.list-font2 {
  margin-top: 19rpx;
}

.list-font3 {
  font-size: 24rpx;
  opacity: 0.6;
  text-indent: 48rpx;
  margin-top: 10rpx;
}

.list-arrow {
  float: right;
  margin-right: 30rpx;
  width: 15rpx;
  height: 27rpx;
  margin-top: 46rpx;
}

.guide1-bottom {
  width: 750rpx;
  height: 100rpx;
  background: #fff;
  border-top: 3rpx solid rgba(0, 0, 0, 0.1);
  position: fixed;
  bottom: 0;
  font-size: 28rpx;
  line-height: 100rpx;
}

.guide1-bottom-line {
  position: absolute;
  width: 300rpx;
  height: 3rpx;
  left: 0;
  top: -3rpx;
  background: red;
}

.guide1-bottom-image {
  width: 80rpx;
  height: 80rpx;
  float: left;
  margin: 10rpx 20rpx 0 10rpx;
}

.play-right {
  width: 24rpx;
  height: 24rpx;
  float: right;
  margin: 38rpx 30rpx 0 0;
}

.play {
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx;
  float: right;
}

.play-left {
  width: 24rpx;
  height: 24rpx;
  float: right;
  margin: 38rpx 0 0 0;
}
