/* index/window1.wxss */
.bg {
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  color: #232323;
}

.window {
  position: absolute;
  bottom: 200rpx;
  top: 234rpx;
  left: 0;
  right: 0;
  padding: 40rpx;
  border-radius: 0 20rpx 0 0;
  background: #fff;
}
.window-close{
  position: absolute;
  top:30rpx;
  right:30rpx;
  width:24rpx;
  height:24rpx;
}
.window-top {
  width: 100%;
  height: 180rpx;
}

.pic {
  width: 230rpx;
  height: 180rpx;
  float: left;
}

.font {
  float: left;
  margin-left: 30rpx;
}

.font-1 {
  margin-top: 5rpx;
  font-size: 34rpx;
  font-weight: bold;
}

.font-2 {
  font-size: 24rpx;
  margin-top: 10rpx;
}

.font-3 {
  font-size: 42rpx;
  margin-top: 25rpx;
}

.line {
  clear: both;
  width: 100%;
  height: 1rpx;
  background: rgba(0, 0, 0, 0.1);
  margin-top: 20rpx;
}

.most {
  width: 100%;
  height: 520rpx;
  overflow: hidden;
}

.topic {
  width: 100%;
  font-size: 24rpx;
  font-weight: bold;
  margin-top: 50rpx;
}

.topic-span {
  float: right;
  color: red;
  font-weight: normal;
}

.kuang {
  position:relative;
  width: 610rpx;
  height: 100rpx;
  border-radius: 0 20rpx 0 0;
  background: rgba(0, 0, 0, 0.1);
  font-size: 28rpx;
  padding: 20rpx 30rpx 0;
  margin-top: 20rpx;
  font-weight: bold;
}
.kuang-right{
  font-size:28rpx;
  font-weight: normal;
  top:20rpx;
  right:30rpx;
  position: absolute;
  opacity: .6
}
.kuang-span {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.4);
  margin-top: 10rpx;
  font-weight: normal;
}

.kuang1 {
  background: rgba(237, 48, 36, 0.1);
  color: rgb(237, 48, 36);
}

.kuang1-span {
  color: rgba(237, 48, 36, 0.4);
}

.small-redfont {
  font-size: 16rpx;
  float: left;
  margin-right: 10rpx;
  color: red;
  border: 1rpx solid red;
  border-radius: 0 8rpx 0 0;
  line-height: 15rpx;
  padding: 3rpx;
  margin-top: 8rpx;
}

.bottom {
  position: absolute;
  width: 670rpx;
  padding: 0 40rpx;
  height: 100rpx;
  background: #fff;
  font-size: 24rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  bottom: 100rpx;
  line-height: 100rpx;
  font-weight: bold;
}

.bottom-count {
  float: right;
  width: 177rpx;
  height: 50rpx;
  font-size: 24rpx;
  line-height: 50rpx;
  margin-top: 25rpx;
}

.bottom-count span {
  float: left;
  min-width:50rpx;
  margin:0 10rpx;
  text-align: center;
  line-height: 50rpx;
}

.count1 {
  float: left;
  width: 50rpx;
  height: 50rpx;
  background: rgba(0, 0, 0, 0.05);
  line-height: 45rpx;
  text-align: center;
  font-size:35rpx;
  color:rgba(0,0,0,.1)
}

.count2 {
  background: rgba(0, 0, 0, 0.1);
  color:rgba(0,0,0,.2)
}
.bottom1{
  bottom:0;
  color:rgba(0,0,0,.6);
}
.bottom1 span{
  font-size:42rpx;
  color: red;
}
.bottom1-button{
  float:right;
  width:240rpx;
  font-size:30rpx;
  background: #000;
  color:#fff;
  text-align: center;
  height:100rpx;
  margin-right:-40rpx;
}